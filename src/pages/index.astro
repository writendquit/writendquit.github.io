    <script>
      document.addEventListener('astro:page-load', () => {
        const bentoSection = document.getElementById('bento-section');
        const sectionBtns = document.querySelectorAll('.section-btn');
        const progressBar = document.getElementById('scroll-progress');
        const cards = document.querySelectorAll('.bento-card');
        let currentIndex = 0;
        const totalSections = 5;

        // Card to section mapping (data-index values)
        const sectionCards = [
          [0], // Discord
          [1], // Blog
          [2, 3, 4], // Logo + Nav + GitHub
          [5], // Chess
          [6]  // Languages
        ];

        function updateSection(index) {
          currentIndex = index;
          const progress = ((index + 1) / totalSections) * 100;
          if (progressBar) progressBar.style.width = `${progress}%`;

          // Update buttons
          sectionBtns.forEach((btn, i) => {
            const spans = btn.querySelectorAll('span');
            if (i === index) {
              spans[0].classList.add('text-white', 'font-bold');
              spans[0].classList.remove('text-[#8b949e]');
              spans[1].classList.add('text-orange-500');
              spans[1].classList.remove('text-[#8b949e]');
            } else {
              spans[0].classList.remove('text-white', 'font-bold');
              spans[0].classList.add('text-[#8b949e]');
              spans[1].classList.remove('text-orange-500');
              spans[1].classList.add('text-[#8b949e]');
            }
          });

          // Highlight relevant cards
          cards.forEach((card, i) => {
            if (sectionCards[index]?.includes(i)) {
              card.classList.add('border-orange-500/50', 'shadow-[0_0_20px_rgba(249,115,22,0.2)]');
            } else {
              card.classList.remove('border-orange-500/50', 'shadow-[0_0_20px_rgba(249,115,22,0.2)]');
            }
          });
        }

        // Click navigation
        sectionBtns.forEach((btn, i) => {
          btn.addEventListener('click', () => updateSection(i));
        });

        // Scroll wheel navigation
        let scrollTimeout: ReturnType<typeof setTimeout>;
        bentoSection?.addEventListener('wheel', (e) => {
          e.preventDefault();
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            if (e.deltaY > 0 && currentIndex < totalSections - 1) {
              updateSection(currentIndex + 1);
            } else if (e.deltaY < 0 && currentIndex > 0) {
              updateSection(currentIndex - 1);
            }
          }, 50);
        }, { passive: false });

        // Initialize
        updateSection(0);
      });
    </script>
