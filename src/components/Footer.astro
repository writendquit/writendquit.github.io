---
import { Icon } from 'astro-icon/components'
import Link from './Link.astro'
---

<footer class="border-t">
  <div class="mx-auto max-w-7xl px-4 py-8">
    <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
      <div class="flex items-center gap-4">
        <span class="text-sm text-muted-foreground">
          &copy; 2025 colonwq foundation, 501(c)(3)
        </span>
      </div>
      
      <div class="flex items-center gap-4">
        <Link 
          href="https://ctftime.org/user/233116" 
          external 
          class="text-muted-foreground hover:text-foreground transition-colors"
          title="CTFtime"
        >
          <Icon name="lucide:flag" class="size-5" />
        </Link>
        <Link 
          href="https://github.com/colonwq" 
          external 
          class="text-muted-foreground hover:text-foreground transition-colors"
          title="GitHub"
        >
          <Icon name="lucide:github" class="size-5" />
        </Link>
        <Link 
          href="https://twitter.com/writendquit" 
          external 
          class="text-muted-foreground hover:text-foreground transition-colors"
          title="X"
        >
          <Icon name="lucide:twitter" class="size-5" />
        </Link>
        <Link 
          href="/rss.xml" 
          class="text-muted-foreground hover:text-foreground transition-colors"
          title="RSS Feed"
        >
          <Icon name="lucide:rss" class="size-5" />
        </Link>
      </div>
    </div>
  </div>
</footer>
