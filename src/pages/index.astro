import GitHubContributions from '@/components/GitHubContributions'

const blog = await getRecentPosts(4)

// Change this to your actual GitHub username
const GITHUB_USERNAME = 'writendquit'
---

<Layout class="!max-w-none !px-0" hideFooter>
  <PageHead slot="head" title="Home" />
  
  <style>
    @keyframes pulse-glow {
      0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.4); }
      50% { opacity: 0.7; box-shadow: 0 0 6px 2px rgba(249, 115, 22, 0.5); }
    }
    @keyframes scroll-logos {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    @keyframes shine {
      0% { background-position: -200% center; }
      100% { background-position: 200% center; }
    }
    .orange-dot { animation: pulse-glow 2s ease-in-out infinite; }
    .logo-scroll { animation: scroll-logos 20s linear infinite; }
    .logo-scroll:hover { animation-play-state: paused; }
    .shiny-text {
      background: linear-gradient(90deg, 
        rgba(148, 163, 184, 0.3) 0%, 
        rgba(248, 250, 252, 0.9) 25%, 
        rgba(148, 163, 184, 0.3) 50%, 
        rgba(248, 250, 252, 0.9) 75%, 
        rgba(148, 163, 184, 0.3) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: shine 3s linear infinite;
    }
    .shiny-text:hover {
      background: linear-gradient(90deg, 
        rgba(249, 115, 22, 0.5) 0%, 
        rgba(251, 191, 36, 1) 50%, 
        rgba(249, 115, 22, 0.5) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      animation: shine 2s linear infinite;
    }
  </style>

  <!-- ===== HERO SECTION ===== -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 pt-12 lg:pt-20 pb-8">
      
      <!-- LEFT: Content -->
      <div class="max-w-lg">
        <!-- VISION label -->
        <div class="flex items-center gap-2 mb-6">
          <div class="w-1.5 h-1.5 bg-orange-500 rounded-full orange-dot"></div>
          <span class="text-[11px] font-medium tracking-[0.2em] uppercase">Vision</span>
        </div>
        
        <!-- Main headline -->
        <h1 class="text-[2.5rem] sm:text-[3rem] lg:text-[3.5rem] font-bold leading-[1.08] tracking-[-0.02em] mb-6">
          <Link href="https://x.com/writendquit" external class="hover:text-orange-500 transition-colors">Security</Link> Research<br/>
          <span class="text-foreground">& <Link href="https://ctftime.org/user/233116" external class="hover:text-orange-500 transition-colors">CTF</Link> Player</span>
        </h1>
        
        <!-- Intro -->
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-4">
          Hi, <span class="text-foreground font-medium">:wq!</span> [colonwq] is a <Link href="https://x.com/writendquit" external class="text-foreground underline underline-offset-2 hover:text-orange-500 transition-colors">security researcher</Link>, <Link href="https://ctftime.org/user/233116" external class="text-foreground underline underline-offset-2 hover:text-orange-500 transition-colors">CTF player</Link>, 
          jailbreaking AI models & reverse engineering them to yield results in research, CTF, and bug bounties.
        </p>
        
        <!-- Description -->
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-8">
          Having keen interest in <span class="text-foreground">reverse engineering</span> and 
          <span class="text-foreground">binary exploitation</span> — breaking things to understand how they work.
        </p>
        
        <!-- Status Toggle Switch - Clickable -->
        <div class="flex flex-wrap gap-3 mb-6">
          <button id="status-toggle" class="flex items-center gap-3 px-4 py-2.5 border border-border rounded-full bg-background hover:border-orange-500/50 transition-colors cursor-pointer">
            <div class="relative w-12 h-6 bg-muted rounded-full transition-colors">
              <div id="toggle-dot" class="absolute top-0.5 w-5 h-5 bg-orange-500 rounded-full shadow-[0_0_10px_rgba(249,115,22,0.7)] transition-all duration-300 left-0.5"></div>
            </div>
            <span id="status-text" class="text-[11px] font-medium tracking-wider text-foreground">OPEN TO WORK</span>
          </button>
        </div>
      </div>
      
      <script>
        document.addEventListener('astro:page-load', () => {
          const toggle = document.getElementById('status-toggle');
          const dot = document.getElementById('toggle-dot');
          const text = document.getElementById('status-text');
          let isWorking = true;
          
          toggle?.addEventListener('click', () => {
            isWorking = !isWorking;
            if (isWorking) {
              dot?.classList.remove('right-0.5');
              dot?.classList.add('left-0.5');
              if (text) text.textContent = 'OPEN TO WORK';
            } else {
              dot?.classList.remove('left-0.5');
              dot?.classList.add('right-0.5');
              if (text) text.textContent = 'BUSY EXPLOITING';
            }
          });
        });
      </script>
      
      <!-- RIGHT: Animated Diagram -->
