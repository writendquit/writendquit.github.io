            <img src="https://zoom.us/favicon.ico" alt="Zoom" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Zoom</span>
          </a>
          <!-- Akamai -->
          <a href="https://www.akamai.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://www.akamai.com/favicon.ico" alt="Akamai" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Akamai</span>
          </a>
          <!-- Riot Games -->
          <a href="https://www.riotgames.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12.534 21.77l-1.09-2.81 10.52.54-.451 4.5zM15.06 0L.307 6.969 2.59 17.471H5.6l-.52-7.512.461-.144 1.81 7.656h3.126l-.116-9.428.461-.144 1.343 9.572h3.127l.69-11.452.461-.144.737 11.596h3.127l1.394-14.404L15.06 0z"/></svg>
            <span class="text-base font-medium text-foreground">Riot Games</span>
          </a>
          <!-- Duplicate for seamless scroll -->
          <a href="https://www.airwallex.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://www.airwallex.com/favicon.ico" alt="Airwallex" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Airwallex</span>
          </a>
          <a href="https://groq.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://groq.com/favicon.ico" alt="Groq" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Groq</span>
          </a>
          <a href="https://factory.ai" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://factory.ai/favicon.ico" alt="Factory" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Factory</span>
          </a>
          <a href="https://www.mclaren.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://www.mclaren.com/favicon.ico" alt="McLaren" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">McLaren</span>
          </a>
          <a href="https://www.anthropic.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://www.anthropic.com/favicon.ico" alt="Anthropic" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Anthropic</span>
          </a>
          <a href="https://www.cyera.io" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10"/></svg>
            <span class="text-base font-medium text-foreground">Cyera</span>
          </a>
          <a href="https://zoom.us" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://zoom.us/favicon.ico" alt="Zoom" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Zoom</span>
          </a>
          <a href="https://www.akamai.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <img src="https://www.akamai.com/favicon.ico" alt="Akamai" class="h-5 w-5" />
            <span class="text-base font-medium text-foreground">Akamai</span>
          </a>
          <a href="https://www.riotgames.com" target="_blank" rel="noopener" class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12.534 21.77l-1.09-2.81 10.52.54-.451 4.5zM15.06 0L.307 6.969 2.59 17.471H5.6l-.52-7.512.461-.144 1.81 7.656h3.126l-.116-9.428.461-.144 1.343 9.572h3.127l.69-11.452.461-.144.737 11.596h3.127l1.394-14.404L15.06 0z"/></svg>
            <span class="text-base font-medium text-foreground">Riot Games</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== BENTO GRID SECTION ===== -->
  <section id="bento-section" class="bg-[#0a0a0a] min-h-screen relative">
    <div class="flex">
      <!-- MAIN BENTO GRID -->
      <div class="flex-1 p-4 grid grid-cols-12 grid-rows-6 gap-3 min-h-screen">
        
        <!-- Discord Card - Top Left (3x2) -->
        <div class="col-span-3 row-span-2 bg-[#141414] rounded-xl border border-[#252525] p-4 flex flex-col hover:border-orange-500/30 transition-colors bento-card" data-index="0">
          <div class="flex items-center gap-2 mb-3">
            <img src="/discord-profile.png" alt="Discord" class="w-12 h-12 rounded-full grayscale hover:grayscale-0 transition-all" />
            <span class="text-[#8b949e] text-xs">●●●●●●</span>
          </div>
          <div class="mt-auto">
            <p class="text-white font-semibold">writendquit</p>
            <p class="text-[#8b949e] text-xs">@writendquit</p>
            <div class="mt-2 bg-[#5865F2]/20 rounded px-2 py-1 text-xs text-[#5865F2] inline-block">
              No status
            </div>
            <p class="text-[#8b949e] text-[10px] mt-1">I'm probably sleeping...<br/>Enjoy your stay!<br/>>:00 elapsed</p>
          </div>
        </div>

        <!-- Featured Blog Post - Top Center (5x2) -->
        <div class="col-span-5 row-span-2 bg-[#141414] rounded-xl border border-[#252525] overflow-hidden hover:border-orange-500/30 transition-colors bento-card" data-index="1">
          {blog[0] && (
            <a href={`/blog/${blog[0].id}`} class="block h-full relative group">
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent z-10"></div>
              <div class="absolute top-4 right-4 z-20">
                <span class="text-white/60 text-2xl">✦</span>
              </div>
              <div class="absolute bottom-4 left-4 right-4 z-20">
                <p class="text-white font-bold text-lg">{blog[0].data.title}</p>
                <p class="text-[#8b949e] text-xs mt-1">{blog[0].data.description}</p>
              </div>
              <div class="absolute bottom-4 right-4 z-20 opacity-0 group-hover:opacity-100 transition-opacity">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </a>
          )}
        </div>

        <!-- Logo Card - Top Right (2x1) -->
        <div class="col-span-2 row-span-1 bg-[#141414] rounded-xl border border-[#252525] flex items-center justify-center hover:border-orange-500/30 transition-colors bento-card" data-index="2">
          <span class="text-white text-4xl font-bold">:wq!</span>
        </div>

        <!-- Nav Card - Below Logo (2x1) -->
        <div class="col-span-2 row-span-1 bg-[#141414] rounded-xl border border-[#252525] flex items-center justify-center gap-4 text-[#8b949e] text-xs hover:border-orange-500/30 transition-colors bento-card" data-index="3">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <a href="/blog" class="hover:text-white transition-colors">Blog</a>
          <a href="/about" class="hover:text-white transition-colors">About</a>
        </div>

        <!-- Scroll Indicator - Far Right (2x6) -->
        <div class="col-span-2 row-span-6 bg-[#141414] rounded-xl border border-[#252525] p-4 flex flex-col">
          <div class="flex-1 flex flex-col justify-center">
            <!-- Scroll Progress Bar -->
            <div class="h-1 bg-[#252525] rounded-full mb-6 overflow-hidden">
              <div id="scroll-progress" class="h-full bg-gradient-to-r from-[#8b949e] to-orange-500 rounded-full transition-all duration-300" style="width: 20%"></div>
            </div>
            <!-- Section List -->
            <div class="space-y-3 font-mono text-xs">
              <button class="flex items-center gap-2 section-btn w-full text-left hover:text-orange-400 transition-colors" data-section="0">
                <span class="text-white font-bold">01</span>
                <span class="text-orange-500">DISCORD</span>
              </button>
              <button class="flex items-center gap-2 section-btn w-full text-left hover:text-orange-400 transition-colors" data-section="1">
                <span class="text-[#8b949e]">02</span>
                <span class="text-[#8b949e]">BLOG</span>
              </button>
              <button class="flex items-center gap-2 section-btn w-full text-left hover:text-orange-400 transition-colors" data-section="2">
                <span class="text-[#8b949e]">03</span>
                <span class="text-[#8b949e]">GITHUB</span>
              </button>
              <button class="flex items-center gap-2 section-btn w-full text-left hover:text-orange-400 transition-colors" data-section="3">
                <span class="text-[#8b949e]">04</span>
                <span class="text-[#8b949e]">CHESS</span>
              </button>
              <button class="flex items-center gap-2 section-btn w-full text-left hover:text-orange-400 transition-colors" data-section="4">
                <span class="text-[#8b949e]">05</span>
                <span class="text-[#8b949e]">LANGUAGES</span>
              </button>
            </div>
          </div>
        </div>

        <!-- GitHub Contributions - Middle (6x2) -->
        <div class="col-span-6 row-span-2 bg-[#141414] rounded-xl border border-[#252525] p-4 overflow-hidden hover:border-orange-500/30 transition-colors bento-card" data-index="4">
          <GitHubContributions client:load username={GITHUB_USERNAME} />
        </div>

        <!-- Chess Card - Middle Right (2x2) -->
        <div class="col-span-2 row-span-2 bg-[#141414] rounded-xl border border-[#252525] p-4 hover:border-orange-500/30 transition-colors bento-card" data-index="5">
          <a href="https://worldchess.com/profile/1015724" target="_blank" class="block h-full flex flex-col">
            <svg class="w-8 h-8 text-white mb-2" viewBox="0 0 24 24" fill="currentColor"><path d="M19 22H5v-2h14v2M17.16 8.26A8.94 8.94 0 0 0 21 2H3a8.94 8.94 0 0 0 3.84 6.26L4 12l2.5 2.5L8 20h8l1.5-5.5L20 12l-2.84-3.74z"/></svg>
            <p class="text-white font-bold text-2xl mt-auto">1178</p>
            <p class="text-[#8b949e] text-xs">Rapid Rating</p>
            <p class="text-[#8b949e] text-[10px] mt-1">27 games · 7% win</p>
          </a>
        </div>

        <!-- Languages Card - Bottom (8x2) -->
        <div class="col-span-8 row-span-2 bg-[#141414] rounded-xl border border-[#252525] p-4 hover:border-orange-500/30 transition-colors bento-card" data-index="6">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
