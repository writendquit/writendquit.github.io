<Layout class="!max-w-none !px-0" hideFooter>
  <PageHead slot="head" title="Home" />
  
  <style>
    @keyframes pulse-glow {
      0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.4); }
      50% { opacity: 0.7; box-shadow: 0 0 6px 2px rgba(249, 115, 22, 0.5); }
    }
    @keyframes scroll-logos {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    @keyframes shine {
      0% { background-position: -200% center; }
      100% { background-position: 200% center; }
    }
    .orange-dot { animation: pulse-glow 2s ease-in-out infinite; }
    .logo-scroll { animation: scroll-logos 20s linear infinite; }
    .logo-scroll:hover { animation-play-state: paused; }
    .shiny-text {
      background: linear-gradient(90deg, 
        rgba(148, 163, 184, 0.3) 0%, 
        rgba(248, 250, 252, 0.9) 25%, 
        rgba(148, 163, 184, 0.3) 50%, 
        rgba(248, 250, 252, 0.9) 75%, 
        rgba(148, 163, 184, 0.3) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: shine 3s linear infinite;
    }
    .shiny-text:hover {
      background: linear-gradient(90deg, 
        rgba(249, 115, 22, 0.5) 0%, 
        rgba(251, 191, 36, 1) 50%, 
        rgba(249, 115, 22, 0.5) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      animation: shine 2s linear infinite;
    }
  </style>

  <!-- ===== HERO SECTION ===== -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
