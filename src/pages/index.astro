          <!-- Middle horizontal with orange dot and progress -->
          <line x1="330" y1="160" x2="480" y2="160" stroke="currentColor" stroke-width="1" class="text-border"/>
          <circle cx="370" cy="160" r="4" class="fill-orange-500 orange-dot"/>
          <!-- Progress bar -->
          <rect x="385" y="157" width="60" height="6" rx="3" class="fill-muted"/>
          <rect x="385" y="157" width="45" height="6" rx="3" class="fill-orange-500"/>
          
          <!-- Bottom connector -->
