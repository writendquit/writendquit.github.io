---
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import Link from '@/components/Link.astro'
import { buttonVariants } from '@/components/ui/button'
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  
  <section class="py-12">
    <div class="flex flex-col gap-8 md:flex-row md:items-start">
      <div class="shrink-0">
        <div class="size-28 rounded-full border-2 border-foreground/10 p-1">
          <div class="flex h-full w-full items-center justify-center rounded-full bg-muted">
            <Icon name="lucide:user" class="size-12 text-muted-foreground" />
          </div>
        </div>
      </div>
      
      <div class="flex-1">
        <h1 class="mb-6 text-4xl font-bold tracking-tight">.;,;.</h1>
        
        <p class="mb-2 text-lg text-muted-foreground">/ˈsmaɪli/ • noun</p>
        
        <div class="mb-6 space-y-4 text-muted-foreground">
          <p>
            <span class="font-medium text-foreground">CTF Player</span> — 
            Competitive capture-the-flag player, ranked among top teams globally on CTFtime.
          </p>
          <p>
            <span class="font-medium text-foreground">Security Researcher</span> — 
            Finding vulnerabilities in web applications, binaries, and cryptographic systems.
          </p>
          <p>
            <span class="font-medium text-foreground">Bug Bounty Hunter</span> — 
            Having fun breaking things responsibly and getting paid for it.
          </p>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <Link 
            href="https://github.com/writendquit" 
            external
            class={buttonVariants({ variant: 'outline', size: 'sm' })}
          >
            <Icon name="lucide:github" class="mr-2 size-4" />
            GitHub
          </Link>
          <Link 
            href="https://twitter.com/writendquit" 
            external
            class={buttonVariants({ variant: 'outline', size: 'sm' })}
          >
            <Icon name="lucide:twitter" class="mr-2 size-4" />
            Twitter
          </Link>
          <Link 
            href="https://ctftime.org/team/writendquit" 
            external
            class={buttonVariants({ variant: 'outline', size: 'sm' })}
          >
            <Icon name="lucide:flag" class="mr-2 size-4" />
            CTFtime
          </Link>
          <Link 
            href="mailto:contact@colonwq.me" 
            class={buttonVariants({ variant: 'outline', size: 'sm' })}
          >
            <Icon name="lucide:mail" class="mr-2 size-4" />
            Email
          </Link>
        </div>
      </div>
    </div>
  </section>
</Layout>
