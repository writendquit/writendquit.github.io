          <!-- Main horizontal line top -->
          <line x1="60" y1="95" x2="200" y2="95" stroke="currentColor" stroke-width="1" class="text-border"/>
          <!-- Dots on top line -->
          <circle cx="100" cy="95" r="4" class="fill-foreground"/>
          <circle cx="140" cy="95" r="3" class="fill-muted-foreground"/>
          
          <!-- Vertical line down from 200 -->
          <line x1="200" y1="95" x2="200" y2="220" stroke="currentColor" stroke-width="1" class="text-border"/>
          
          <!-- Top right horizontal -->
          <line x1="300" y1="95" x2="450" y2="95" stroke="currentColor" stroke-width="1" class="text-border"/>
