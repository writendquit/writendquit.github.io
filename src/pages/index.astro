---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'
import GitHubContributions from '@/components/GitHubContributions'

const blog = await getRecentPosts(4)

// Change this to your actual GitHub username
const GITHUB_USERNAME = 'writendquit'
---

<Layout class="!max-w-none !px-0" hideFooter>
  <PageHead slot="head" title="Home" />
  
  <style>
    @keyframes pulse-glow {
      0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.4); }
      50% { opacity: 0.7; box-shadow: 0 0 6px 2px rgba(249, 115, 22, 0.5); }
    }
    @keyframes scroll-logos {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    @keyframes shine {
      0% { background-position: -200% center; }
      100% { background-position: 200% center; }
    }
    .orange-dot { animation: pulse-glow 2s ease-in-out infinite; }
    .logo-scroll { animation: scroll-logos 20s linear infinite; }
    .logo-scroll:hover { animation-play-state: paused; }
    .shiny-text {
      background: linear-gradient(90deg, 
        rgba(148, 163, 184, 0.3) 0%, 
        rgba(248, 250, 252, 0.9) 25%, 
        rgba(148, 163, 184, 0.3) 50%, 
        rgba(248, 250, 252, 0.9) 75%, 
        rgba(148, 163, 184, 0.3) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: shine 3s linear infinite;
    }
    .shiny-text:hover {
      background: linear-gradient(90deg, 
        rgba(249, 115, 22, 0.5) 0%, 
        rgba(251, 191, 36, 1) 50%, 
        rgba(249, 115, 22, 0.5) 100%);
      background-size: 200% auto;
      -webkit-background-clip: text;
      background-clip: text;
      animation: shine 2s linear infinite;
    }
  </style>

  <!-- ===== HERO SECTION ===== -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 pt-12 lg:pt-20 pb-8">
      
      <!-- LEFT: Content -->
      <div class="max-w-lg">
        <!-- VISION label -->
        <div class="flex items-center gap-2 mb-6">
          <div class="w-1.5 h-1.5 bg-orange-500 rounded-full orange-dot"></div>
          <span class="text-[11px] font-medium tracking-[0.2em] uppercase">Vision</span>
        </div>
        
        <!-- Main headline -->
        <h1 class="text-[2.5rem] sm:text-[3rem] lg:text-[3.5rem] font-bold leading-[1.08] tracking-[-0.02em] mb-6">
          <Link href="https://x.com/writendquit" external class="hover:text-orange-500 transition-colors">Security</Link> Research<br/>
          <span class="text-foreground">& <Link href="https://ctftime.org/user/233116" external class="hover:text-orange-500 transition-colors">CTF</Link> Player</span>
        </h1>
        
        <!-- Intro -->
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-4">
          Hi, <span class="text-foreground font-medium">:wq!</span> [colonwq] is a security researcher, CTF player, 
          jailbreaking AI models & reverse engineering them to yield results in research, CTF, and bug bounties.
        </p>
        
        <!-- Description -->
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-8">
          Having keen interest in <span class="text-foreground">reverse engineering</span> and 
          <span class="text-foreground">binary exploitation</span> — breaking things to understand how they work.
        </p>
        
        <!-- Status Toggle Switches -->
        <div class="flex flex-wrap gap-3 mb-6">
          <!-- Open to Work Switch -->
          <div class="flex items-center gap-2 px-3 py-2 border border-border rounded-full">
            <div class="relative w-10 h-5 bg-green-500/20 rounded-full">
              <div class="absolute right-0.5 top-0.5 w-4 h-4 bg-green-500 rounded-full shadow-[0_0_8px_rgba(34,197,94,0.6)]"></div>
            </div>
            <span class="text-[11px] font-medium tracking-wider text-green-500">OPEN TO WORK</span>
          </div>
          
          <!-- Busy Exploitation Switch -->
          <div class="flex items-center gap-2 px-3 py-2 border border-border rounded-full">
            <div class="relative w-10 h-5 bg-red-500/20 rounded-full">
              <div class="absolute right-0.5 top-0.5 w-4 h-4 bg-red-500 rounded-full shadow-[0_0_8px_rgba(239,68,68,0.6)] animate-pulse"></div>
            </div>
            <span class="text-[11px] font-medium tracking-wider text-red-500">BUSY EXPLOITING</span>
          </div>
        </div>
      </div>
      
      <!-- RIGHT: Animated Diagram -->
      <div class="relative hidden lg:block h-[400px]">
        <!-- SVG Lines and dots -->
        <svg class="absolute inset-0 w-full h-full" viewBox="0 0 500 400" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Main horizontal line top -->
          <line x1="60" y1="95" x2="200" y2="95" stroke="currentColor" stroke-width="1" class="text-border"/>
          <!-- Dots on top line -->
          <circle cx="100" cy="95" r="4" class="fill-foreground"/>
          <circle cx="140" cy="95" r="3" class="fill-muted-foreground"/>
          
          <!-- Vertical line down from 200 -->
          <line x1="200" y1="95" x2="200" y2="220" stroke="currentColor" stroke-width="1" class="text-border"/>
          
          <!-- Top right horizontal -->
          <line x1="300" y1="95" x2="450" y2="95" stroke="currentColor" stroke-width="1" class="text-border"/>
          <!-- Corner box indicator -->
          <rect x="445" y="88" width="14" height="14" stroke="currentColor" stroke-width="1" fill="none" class="text-border"/>
          <circle cx="452" cy="95" r="2" class="fill-muted-foreground"/>
          
          <!-- Right vertical line -->
          <line x1="400" y1="95" x2="400" y2="160" stroke="currentColor" stroke-width="1" class="text-border"/>
          
          <!-- Middle horizontal with orange dot and progress -->
          <line x1="330" y1="160" x2="480" y2="160" stroke="currentColor" stroke-width="1" class="text-border"/>
          <circle cx="370" cy="160" r="4" class="fill-orange-500 orange-dot"/>
          <!-- Progress bar -->
          <rect x="385" y="157" width="60" height="6" rx="3" class="fill-muted"/>
          <rect x="385" y="157" width="45" height="6" rx="3" class="fill-orange-500"/>
          
          <!-- Bottom connector -->
          <line x1="200" y1="220" x2="280" y2="220" stroke="currentColor" stroke-width="1" class="text-border"/>
          <circle cx="240" cy="220" r="3" class="fill-muted-foreground"/>
          
          <!-- Animated traveling dot -->
          <circle r="4" class="fill-orange-500">
            <animateMotion dur="5s" repeatCount="indefinite" path="M60,95 L200,95 L200,220 L280,220 L280,160 L400,160 L400,95 L300,95"/>
          </circle>
        </svg>
        
        <!-- Center diamond with image -->
        <div class="absolute top-[42%] left-[38%] -translate-x-1/2 -translate-y-1/2">
          <div class="w-[72px] h-[72px] rotate-45 border border-border bg-background flex items-center justify-center">
            <div class="-rotate-45">
              <img 
                src="/writendquit.jpg" 
                alt=":wq!"
                class="w-9 h-9 rounded object-cover grayscale"
              />
            </div>
          </div>
        </div>
        
        <!-- Code snippet box (bottom right) -->
        <div class="absolute bottom-[8%] right-[2%] w-[200px] border border-border rounded-lg bg-background shadow-sm overflow-hidden">
          <div class="flex items-center justify-between px-3 py-2 border-b border-border bg-muted/30">
            <div class="flex gap-1">
              <div class="w-2 h-2 rounded-full bg-muted-foreground/30"></div>
              <div class="w-2 h-2 rounded-full bg-muted-foreground/30"></div>
              <div class="w-2 h-2 rounded-full bg-muted-foreground/30"></div>
            </div>
            <span class="text-[9px] text-muted-foreground font-mono">status.log</span>
          </div>
          <div class="px-3 py-2">
            <pre class="text-[9px] font-mono text-muted-foreground leading-relaxed"><code>:wq!@strict9:~$ <span class="text-foreground">whoami</span>
  alias: AerlynVorynx
  role: Security Researcher
  rank: <span class="text-orange-500">#42</span>
  status: <span class="text-green-500">active</span></code></pre>
          </div>
        </div>
        
        <!-- Small decorative dots -->
        <div class="absolute top-[25%] right-[20%] w-2 h-2 rounded-full bg-muted-foreground/20"></div>
        <div class="absolute top-[55%] left-[22%] w-1.5 h-1.5 rounded-full bg-muted-foreground/15"></div>
      </div>
    </div>
    
    <!-- TRUSTED BY section -->
    <div class="py-12 border-t border-border">
      <p class="text-center text-sm text-muted-foreground mb-8">Trusted by security teams at</p>
      
      <!-- Scrolling logos - factory.ai style -->
      <div class="relative overflow-hidden">
        <!-- Fade edges -->
        <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-background to-transparent z-10"></div>
        <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-background to-transparent z-10"></div>
        
        <div class="flex items-center gap-16 logo-scroll py-4" style="width: max-content;">
          <!-- Google -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-6 w-6" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
            <span class="text-lg font-medium">Google</span>
          </div>
          <!-- Microsoft -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M0 0h11.5v11.5H0zM12.5 0H24v11.5H12.5zM0 12.5h11.5V24H0zM12.5 12.5H24V24H12.5z"/></svg>
            <span class="text-lg font-medium">Microsoft</span>
          </div>
          <!-- Meta -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-6 w-6" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/></svg>
            <span class="text-lg font-medium">Meta</span>
          </div>
          <!-- HackerOne -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M7 4v16h3V4H7zm7 4v12h3V8h-3z"/></svg>
            <span class="text-lg font-medium">HackerOne</span>
          </div>
          <!-- Bugcrowd -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><path d="M8 12l3 3 5-6" stroke="currentColor" stroke-width="2" fill="none"/></svg>
            <span class="text-lg font-medium">Bugcrowd</span>
          </div>
          <!-- Synack -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2L2 7v10l10 5 10-5V7L12 2zm0 2.18l7.27 3.64L12 11.45 4.73 7.82 12 4.18z"/></svg>
            <span class="text-lg font-medium">Synack</span>
          </div>
          <!-- CrowdStrike -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
            <span class="text-lg font-medium">CrowdStrike</span>
          </div>
          <!-- Palo Alto -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            <span class="text-lg font-medium">Palo Alto</span>
          </div>
          <!-- Duplicate for seamless scroll -->
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-6 w-6" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
            <span class="text-lg font-medium">Google</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M0 0h11.5v11.5H0zM12.5 0H24v11.5H12.5zM0 12.5h11.5V24H0zM12.5 12.5H24V24H12.5z"/></svg>
            <span class="text-lg font-medium">Microsoft</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-6 w-6" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/></svg>
            <span class="text-lg font-medium">Meta</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M7 4v16h3V4H7zm7 4v12h3V8h-3z"/></svg>
            <span class="text-lg font-medium">HackerOne</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><path d="M8 12l3 3 5-6" stroke="currentColor" stroke-width="2" fill="none"/></svg>
            <span class="text-lg font-medium">Bugcrowd</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2L2 7v10l10 5 10-5V7L12 2zm0 2.18l7.27 3.64L12 11.45 4.73 7.82 12 4.18z"/></svg>
            <span class="text-lg font-medium">Synack</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
            <span class="text-lg font-medium">CrowdStrike</span>
          </div>
          <div class="flex items-center gap-2 opacity-40 hover:opacity-80 transition-opacity">
            <svg class="h-5 w-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            <span class="text-lg font-medium">Palo Alto</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== PRODUCT SECTION ===== -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 border-t border-border">
    <div class="flex items-center gap-2 mb-6">
      <div class="w-1.5 h-1.5 bg-orange-500 rounded-full orange-dot"></div>
      <span class="text-[11px] font-medium tracking-[0.2em] uppercase">Product</span>
    </div>
    
    <h2 class="text-[2.5rem] sm:text-[3rem] font-bold leading-[1.1] tracking-[-0.02em] mb-4">
      Skills meet you<br/>
      <span class="text-muted-foreground">wherever you work.</span>
    </h2>
    
    <p class="text-muted-foreground text-[15px] leading-relaxed mb-12 max-w-xl">
      Security research embedded directly into your workflow.<br/>
      IDE, Web, CLI, Slack, Linear. Delegate tasks<br/>
      as they come to mind, wherever you are.
    </p>
    
    <!-- Product tabs -->
    <div class="flex flex-wrap gap-4 mb-12">
      <button class="text-sm font-medium text-foreground border-b-2 border-foreground pb-1">01 Terminal / IDE</button>
      <button class="text-sm text-muted-foreground hover:text-foreground transition-colors pb-1">02 Web Browser</button>
      <button class="text-sm text-muted-foreground hover:text-foreground transition-colors pb-1">03 Command Line</button>
      <button class="text-sm text-muted-foreground hover:text-foreground transition-colors pb-1">04 Slack / Teams</button>
      <button class="text-sm text-muted-foreground hover:text-foreground transition-colors pb-1">05 Project Manager</button>
    </div>
    
    <!-- GitHub Contributions - Full Width -->
    <div class="mb-16">
      <GitHubContributions client:load username={GITHUB_USERNAME} />
    </div>
    
    <!-- Product content grid -->
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Left: Description card -->
      <div class="border border-border rounded-2xl p-8">
        <div class="text-[11px] font-medium tracking-[0.15em] uppercase text-muted-foreground mb-4">01 — Terminal / IDE</div>
        
        <div class="flex gap-2 mb-4">
          <button class="px-3 py-1.5 text-[11px] font-medium tracking-wider border border-foreground bg-foreground text-background rounded">
            MACOS / LINUX
          </button>
          <button class="px-3 py-1.5 text-[11px] font-medium tracking-wider border border-border text-muted-foreground rounded">
            WINDOWS
          </button>
        </div>
        
        <div class="flex items-center border border-border rounded-md overflow-hidden mb-6">
          <div class="flex-1 flex items-center gap-2 px-4 py-3 font-mono text-sm">
            <span class="text-muted-foreground">&gt;</span>
            <span class="text-foreground">curl -fsSL https://wq.dev/cli | sh</span>
          </div>
          <button class="px-3 py-3 border-l border-border hover:bg-muted transition-colors">
            <Icon name="lucide:copy" class="w-4 h-4 text-muted-foreground" />
          </button>
        </div>
        
        <Link href="/about" class="inline-flex items-center gap-2 text-sm font-medium hover:gap-3 transition-all">
          Quickstart Guide
          <Icon name="lucide:arrow-right" class="w-4 h-4" />
        </Link>
        
        <h3 class="text-2xl font-bold mt-8 mb-4">Research where you code</h3>
        
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-6">
          :wq! meets you in your editor without forcing a switch. 
          Delegate tasks in any IDE or terminal: VS Code, JetBrains, Vim, and more. 
          All while maintaining your workflow, tools, and shortcuts.
        </p>
        
        <Link href="/about" class="inline-flex items-center gap-2 text-sm font-medium hover:gap-3 transition-all">
          Learn more
          <Icon name="lucide:arrow-right" class="w-4 h-4" />
        </Link>
      </div>
      
      <!-- Right: Stats Card -->
      <div class="border border-border rounded-2xl p-8 bg-muted/5">
        <div class="text-[11px] font-medium tracking-[0.15em] uppercase text-muted-foreground mb-6">02 — Activity Stats</div>
        
        <div class="grid grid-cols-2 gap-6 mb-8">
          <div>
            <p class="text-4xl font-bold text-foreground">89</p>
            <p class="text-sm text-muted-foreground">Vulnerabilities Found</p>
          </div>
          <div>
            <p class="text-4xl font-bold text-foreground">42</p>
            <p class="text-sm text-muted-foreground">CTFs Completed</p>
          </div>
          <div>
            <p class="text-4xl font-bold text-foreground">#42</p>
            <p class="text-sm text-muted-foreground">CTFtime Rank</p>
          </div>
          <div>
            <p class="text-4xl font-bold text-foreground">127</p>
            <p class="text-sm text-muted-foreground">Contributions</p>
          </div>
        </div>
        
        <h3 class="text-2xl font-bold mb-4">Consistent Activity</h3>
        
        <p class="text-muted-foreground text-[15px] leading-relaxed mb-6">
          Track my real-time coding activity and contribution history. 
          Every push, every commit, displayed live from GitHub.
        </p>
        
        <Link href={`https://github.com/${GITHUB_USERNAME}`} external class="inline-flex items-center gap-2 text-sm font-medium hover:gap-3 transition-all">
          View GitHub Profile
          <Icon name="lucide:arrow-right" class="w-4 h-4" />
        </Link>
      </div>
    </div>
