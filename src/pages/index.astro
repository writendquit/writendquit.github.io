            </div>
            <span id="status-text" class="text-[11px] font-medium tracking-wider text-foreground">OPEN TO WORK</span>
          </button>
        </div>
      </div>
      
      <script>
        document.addEventListener('astro:page-load', () => {
          const toggle = document.getElementById('status-toggle');
          const dot = document.getElementById('toggle-dot');
          const text = document.getElementById('status-text');
          let isWorking = true;
          
          toggle?.addEventListener('click', () => {
            isWorking = !isWorking;
            if (isWorking) {
              dot?.classList.remove('right-0.5');
              dot?.classList.add('left-0.5');
              if (text) text.textContent = 'OPEN TO WORK';
            } else {
              dot?.classList.remove('left-0.5');
              dot?.classList.add('right-0.5');
              if (text) text.textContent = 'BUSY EXPLOITING';
            }
          });
        });
