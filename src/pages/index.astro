      <!-- LEFT: Content -->
      <div class="max-w-lg">
        <!-- VISION label -->
        <div class="flex items-center gap-2 mb-6">
          <div class="w-1.5 h-1.5 bg-orange-500 rounded-full orange-dot"></div>
          <span class="text-[11px] font-medium tracking-[0.2em] uppercase">Vision</span>
        </div>
        
        <!-- Main headline -->
